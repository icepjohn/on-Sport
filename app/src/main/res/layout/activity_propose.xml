<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:id="@+id/r">

    <ImageView
        android:id="@+id/Splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/logoSplash"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_splk"

        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:background="@drawable/container_radius"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="130dp"
        >

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/titre"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:hint="Nom de l'activité"
            android:inputType="text"
            android:textColor="#64221b"
            android:textColorHint="@color/lightGrey"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/lieu"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:hint="Lieu"
            android:inputType="text"
            android:textColor="#64221b"
            android:textColorHint="@color/lightGrey"
            android:textSize="14dp"
            />
        <EditText
            android:id="@+id/Date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:hint="Date de l'activité"
            android:inputType="text"
            android:textColor="#64221b"
            android:textColorHint="@color/lightGrey"
            android:textSize="14dp"
            />
        <EditText
            android:id="@+id/activity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:hint="Type d'activité"
            android:inputType="text"
            android:textColor="#64221b"
            android:textColorHint="@color/lightGrey"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/nbrParticipants"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:hint="Nombre de participants"
            android:inputType="text"
            android:textColor="#64221b"
            android:textColorHint="@color/lightGrey"
            android:textSize="14dp"
            />










    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="1">
        <Button

            android:id="@+id/SignUp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_red"
            android:clickable="true"
            android:text="Enregistrer l'activitée"
            android:textAllCaps="false"
            android:textColor="#ffffff" />
    </LinearLayout>




</RelativeLayout>